# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# GET /products - Wyświetla wszystkie produkty
GET     /products           controllers.ProductController.getAllProducts()

# GET /products/:id - Wyświetla produkt o podanym ID
GET     /products/:id       controllers.ProductController.getProduct(id: Long)

# POST /products - Tworzy nowy produkt
POST    /create-product         controllers.ProductController.createProduct()

# PUT /products/:id - Aktualizuje produkt o podanym ID
PUT     /products/:id       controllers.ProductController.updateProduct(id: Long)

# DELETE /products/:id - Usuwa produkt o podanym ID
DELETE  /products/:id       controllers.ProductController.deleteProduct(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
